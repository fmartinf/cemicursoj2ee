<validators>
  
  <field name="email">
	<field-validator type="requiredstring">
          <message>El email es obligatorio</message>
	</field-validator>
  </field>
  
  <field name="password">
	<field-validator type="requiredstring">
      	<message>La contraseña es obligatoria</message>
	</field-validator>
  </field>
  
  <!-- [inicio] validador de email -->
  <field name="email">
  	<field-validator type="email">
      <message>El email introducido no es válido</message>
   	</field-validator>
  </field>
  <!-- [fin] validador de email -->
  
</validators>